<%= form_for(@interview, html: { class: "form-horizontal", role: "form", multipart: true }) do |f| %>
  <% if @interview.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@interview.errors.count, "error") %> prohibited this interview from being saved:</h4>

      <ul>
      <% @interview.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :interview_time, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :interview_time, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :study, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:study_id, Study.all, :id, :name, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :interviewer, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:interviewer_id, Interviewer.all, :id, :name, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :interviewee, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:interviewee_id, Interviewee.all, :id, :name, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :locale, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:locale_id, Locale.all, :id, :full_name, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :zipfile, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :zipfile, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
